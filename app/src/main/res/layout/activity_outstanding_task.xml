    </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">
        <!--<TableLayout-->
            <!--android:id="@+id/tl_data_report"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content" >-->
        <!--</TableLayout>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <com.owater.library.CircleTextView
                    android:id="@+id/tvTotalPending"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.33"
                    android:gravity="center"
                    android:text="1234"
                    android:textColor="@color/colorAccent"
                    android:textSize="30dp"
                    app:ct_backgroundColor="#FFFFFF"
                    app:ct_border_alpha="0.5"
                    app:ct_border_color="@color/color_primary_blue"
                    app:ct_border_width="10dp"
                    app:ct_type="shadow_alpha" />

                <TextView
                    android:id="@+id/textView38"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="PENDING"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <com.owater.library.CircleTextView
                    android:id="@+id/tvTotalConfirm"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.33"
                    android:gravity="center"
                    android:text="1234"
                    android:textColor="@color/colorAccent"
                    android:textSize="30dp"
                    app:ct_backgroundColor="#FFFFFF"
                    app:ct_border_alpha="0.5"
                    app:ct_border_color="@color/colorAccent"
                    app:ct_border_width="10dp"
                    app:ct_type="shadow_alpha" />

                <TextView
                    android:id="@+id/textView40"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="CONFIRMED"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <com.owater.library.CircleTextView
                    android:id="@+id/tvTotalCancel"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.33"
                    android:gravity="center"
                    android:text="1234"
                    android:textColor="@color/colorAccent"
                    android:textSize="30dp"
                    app:ct_backgroundColor="#FFFFFF"
                    app:ct_border_alpha="0.5"
                    app:ct_border_color="@color/color_primary_red"
                    app:ct_border_width="10dp"
                    app:ct_type="shadow_alpha" />

                <TextView
                    android:id="@+id/textView42"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="CANCELED"
                    android:textSize="11sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_complete"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:padding="5dp"
                android:text="Complete"
                android:textColor="@color/white"
                android:background="@drawable/btn_innermenu"/>

            <Button
                android:id="@+id/btn_taskview"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:padding="5dp"
                android:layout_weight="1"
                android:text="Task View"
                android:textColor="@color/white"
                android:background="@drawable/btn_innermenu"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_refresh"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="Refresh"
                android:textColor="@color/white"
                android:background="@drawable/btn_innermenu"/>
            <Button
                android:id="@+id/btn_break"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="Break"
                android:textColor="@color/white"
                android:background="@drawable/btn_innermenu"/>
        </LinearLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>

    </LinearLayout>

    </ScrollView>

